<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="120dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_bus_image"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bus1"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_marginTop="24dp"
        android:textColor="#000"
        android:id="@+id/tv_bus_name"
        android:textSize="24sp"
        android:text="Shwe Mingalar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/civ_bus_image"
        android:layout_toEndOf="@+id/civ_bus_image" />

    <TextView
        android:id="@+id/tv_bus_path"
        android:textSize="16dp"
        android:layout_toRightOf="@id/civ_bus_image"
        android:layout_below="@id/tv_bus_name"
        android:text="Yangon-Pathein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_more_detail"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:text="More detail"
        android:layout_below="@+id/tv_bus_path"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>